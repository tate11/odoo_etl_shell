<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_scheduler_record_form" model="ir.ui.view">
            <field name="name">etlshell.scheduler.form</field>
            <field name="model">etlshell.script_scheduler</field>
            <field name="arch" type="xml">
                <form string="Schedule record">
                    <group>
                        <field name="script_config"/>
                        <field name="script_config_description"/>
                        <field name="last_modified"/>
                    </group>
                </form>
            </field>
        </record>

        <!-- tree (list) view-->
        <record id="view_scheduler_tree" model="ir.ui.view">
            <field name="name">etlshell.scheduler.tree</field>
            <field name="model">etlshell.script_scheduler</field>
            <field name="arch" type="xml">
                <tree string="Schedules">
                    <field name="script_config"/>
                    <field name="script_config_description"/>
                    <field name="last_modified"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>